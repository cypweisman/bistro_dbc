<h1><%= @recipe.name %></h1>
<h2>Category <%= @recipe.category.title %></h2>




  <%= form_for ([@menu_item]), {action: "create"} do |f| %>
    <%= label_tag("Add To Menu") %>
    <%= f.hidden_field :recipe_id, value: @recipe.id %>
    <%= collection_select(:menu_item, :menu_id, Menu.all, :id, :title, prompt: true )  %>
    <%= f.submit "Submit" %>
  <% end %>






<p>Description: <%= @recipe.description %></p>
<ul>
  <li>Prep time: <%= @recipe.prep_time %></li>
  <li>Directions: <%= @recipe.directions %></li>
  <h3>Ingredients:</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %> <%= ingredient.amount %></li>
    <% end %>
  </ul>

</ul>
