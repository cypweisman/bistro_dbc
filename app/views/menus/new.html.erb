<%= form_for ([@user, @menu]), {action: "create"} do |f| %>
<fieldset id="new-menu">
  <legend>New Menu</legend>
  <%= f.text_field :title, placeholder: "title" %><br><br>
  <%= f.text_area :description, placeholder: "your description here" %><br><br>
  <%= f.hidden_field :user_id, value: params[:user_id] %>
  <%= f.submit "Create" %>
</fieldset>
<% end %>
